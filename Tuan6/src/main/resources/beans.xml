<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id = "student1" class="iuh.fit.se.tuan6.ex1.Student">
        <property name="id" value = "001"></property>
        <property name="name" value = "Nguyen Van A"></property>
    </bean>

    <bean id = "class1" class = "iuh.fit.se.tuan6.ex1.Clazz">
        <property name="id" value="DHKTPM18CTT"></property>
        <property name="name" value="Dai Hoc KTPM18CTT"></property>
    </bean>

    <bean id = "student2" class = "iuh.fit.se.tuan6.ex1.Student">
        <property name="id" value="002"></property>
        <property name="name" value="Nguyen Le Tram Anh"></property>
        <property name="clazz" ref="class1"></property>
    </bean>

    <bean id="student3" class="iuh.fit.se.tuan6.ex1.Student">
        <constructor-arg name="id" value="003"></constructor-arg>
        <constructor-arg name="name" value="Le Thi Thuy"></constructor-arg>
        <constructor-arg name="clazz" ref="class1"></constructor-arg>
    </bean>

    <bean id="classProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:class.properties</value>
            </list>
        </property>
    </bean>

    <bean id="class2" class="iuh.fit.se.tuan6.ex1.Clazz">
        <property name="id" value="DHKTPM"/>
        <property name="name" value="${className}"/>
    </bean>


</beans>

<!--Inject đối tượng Class vào Student bằng setter injection qua file cấu hình XML (beans.xml)!-->